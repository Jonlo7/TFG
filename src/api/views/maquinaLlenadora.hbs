<head>
  <style>
    .grid {
      display: grid;
      grid-template-columns: 30% 40% 30%;
      gap: 6px;
      padding: 6px;
      height: 86vh;
    }

    .parametros,
    .maquina-botones,
    .estado-alarmas {
      background-color: white;
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 1rem;
      overflow: hidden;
    }

    .parametros,
    .estado-alarmas {
      display: flex;
      flex-direction: column;
    }

    .maquina-botones {
      display: grid;
      grid-template-rows: 60% 40%;
      gap: 6px;
    }

    .estado-alarmas {
      grid-template-rows: 25% 75%;
    }

    .estado,
    .alarmas {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .alarmas h3 {
      margin-bottom: 1rem;
    }

    .parametros .grid,
    .botones .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4px;
    }

    .parametros label,
    .botones button {
      font-size: 0.875rem;
      font-weight: 500;
    }

    .parametros input,
    .botones button {
      padding: 0.5rem;
      border: 1px solid #d1d5db;
      border-radius: 0.375rem;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .botones button {
      background-color: #3b82f6;
      color: white;
      cursor: pointer;
    }

    .botones button:hover {
      background-color: #2563eb;
    }

    .botones button:focus {
      outline: 2px solid #3b82f6;
      outline-offset: 2px;
    }
  </style>
</head>

<body class="bg-gray-100 dark:bg-gray-950">
  <div class="grid grid-cols-3 gap-6 p-6 h-full w-full">
    <div class="parametros bg-white rounded-lg shadow-md p-4 space-y-4 dark:bg-gray-950">
      <h3 class="text-lg font-bold">Parametrización</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="variable1" class="block text-sm font-medium text-gray-700 dark:text-gray-400">
            Variable 1
          </label>
          <input id="variable1"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400"
            type="number" />
        </div>
        <div>
          <label for="variable2" class="block text-sm font-medium text-gray-700 dark:text-gray-400">
            Variable 2
          </label>
          <input id="variable2"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400"
            type="number" />
        </div>
      </div>
    </div>
    <div class="maquina-botones grid grid-rows-2 gap-6 h-full">
      <div class="maquina bg-white rounded-lg shadow-md p-4 space-y-4 dark:bg-gray-950">
        <h3 class="text-lg font-bold">Imagen principal</h3>
        <img src="/placeholder.svg" width="800" height="600" alt="Imagen principal" class="w-full h-auto rounded-md"
          style="aspect-ratio: 800 / 600; object-fit: cover;" />
      </div>
      <div class="botones bg-white rounded-lg shadow-md p-4 space-y-4 dark:bg-gray-950">
        <div class="grid grid-cols-2 gap-4">
          <button
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
            Botón 1
          </button>
          <button
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
            Botón 2
          </button>
          <button
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
            Botón 3
          </button>
          <button
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
            Botón 4
          </button>
        </div>
      </div>
    </div>
    <div class="estado-alarmas grid grid-rows-2 gap-6 h-full">
      <div class="estado bg-white rounded-lg shadow-md p-4 space-y-4 dark:bg-gray-950">
        <h3 class="text-lg font-bold">Estado</h3>
        <div class="flex items-center justify-center h-full">
          <div
            class="w-12 h-12 rounded-full bg-green-500 text-white flex items-center justify-center text-2xl font-bold">
            M
          </div>
        </div>
      </div>
      <div class="alarmas bg-white rounded-lg shadow-md p-4 space-y-4 dark:bg-gray-950">
        <h3 class="text-lg font-bold">Alarmas</h3>
      </div>
    </div>
  </div>
</body>
